[alias]
    co = checkout
    br = branch
    ci = commit
    st = status
    up = fetch
    di = diff
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
    unstage = reset HEAD --
    last = log -1 HEAD
    spush = svn dcommit
    spull = svn rebase
    slog = svn log
    sinfo = svn info
    ff = flow feature
[branch]
        autosetuprebase = always
[color]
    ui = always
[push]
    default = matching
[core]
    autocrlf = false
    safecrlf = true
